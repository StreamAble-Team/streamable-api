// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  @@unique([userId])
  userId    Int     @id @default(autoincrement())
  createdAt DateTime @default(now())
  email String  @unique
  name  String?
  password String
  username String @unique
  lists UserLists[]
}

model UserLists {
  @@unique([id])
  @@id([id])
  userId      Int
  id          Int  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  watched     Boolean
  planToWatch Boolean
  dropped     Boolean
  watching    Boolean
  user        User     @relation(fields: [userId], references: [userId])
  episodes    Json
}

model Media {
  @@unique([id])
  @@id([id])
  id          Int            
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       Json
  description String
  type        String
  image       String
  cover       String
  episodes    Episode[]
}

model Episode {
  @@unique([id])
  @@id([id])
  id          Int     
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  description String
  url         String
  type        String
  image       String
  mediaId     Int
  media       Media    @relation(fields: [mediaId], references: [id])
}

